<form method="post" action="connect" class="form-signin">
		<H1 class="form-signin-heading">Connection</H1>
		<label for="username" class="sr-only">Username</label><br>
		<input type="text" id="username" name="username" class="form-control"/><br>
		<label for="password" class="sr-only">Password</label><br>
		<input type="password" id="password" name="password" value="Password" class="form-control"/><br>
		<input type="hidden" name="act" value="connect"/>
		<button class="btn btn-lg btn-primary btn-block" type="submit">Connect</button>
</form>